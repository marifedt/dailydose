<!DOCTYPE html>
<html lang="en" data-theme="valentine">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/output.css">
    <title>Daily Dose</title>
</head>

<body class="grid place-items-center">
    <main class="flex flex-col min-h-screen bg-base-200 w-full ">
        <!-- Navbar -->
        <div class="navbar bg-neutral justify-center">
            <div class="container flex justify-between items-center">
                <div class="flex-1">
                    <h1 class="text-3xl font-bold">DailyDose</h1>
                </div>
                <div class="flex-none">
                    <label class="flex cursor-pointer gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none"
                            stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <circle cx="12" cy="12" r="5" />
                            <path
                                d="M12 1v2M12 21v2M4.2 4.2l1.4 1.4M18.4 18.4l1.4 1.4M1 12h2M21 12h2M4.2 19.8l1.4-1.4M18.4 5.6l1.4-1.4" />
                        </svg>
                        <input type="checkbox" value="sunset" class="toggle theme-controller" />
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none"
                            stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
                        </svg>
                    </label>
                </div>

            </div>

        </div>

        <!-- Main Content -->
        <div class="hero bg-base-200 mt-10">
            <div class="hero-content flex-col lg:flex-row w-full">
                <img src="<%= photo %>" class="max-w-sm rounded-lg shadow-2xl" />
                <div class="m-12 lg:w-2/5 flex-1">
                    <h1 class=" text-3xl lg:text-5xl font-bold text-center lg:text-start lg:leading-snug ">
                        "<%= JSON.parse(JSON.stringify(content)) %>"
                    </h1>

                </div>
            </div>
        </div>

        <% if(content!=='Page Not Found' && content !=='Uh oh, Something Broke...' ) { %>
            <div class="bg-base-200 flex items-center justify-center my-16 gap-5">
                <form id="myForm" method="post" class="flex flex-col gap-5 items-center md:flex-row">
                    <button formaction="/new-advice" type="submit" class="btn btn-accent btn-wide lg:btn-lg">Get a new
                        advice!</button>
                    <div class="join">
                        <div class="input lg:input-lg input-bordered flex items-center join-item ">
                            <input type="text" id="queryInput" name="query"
                                class="grow bg-accent rounded-box outline-none" placeholder="Search for an advice">
                        </div>
                        <button type="submit" class="btn lg:btn-lg btn-accent join-item rounded-r-full "
                            formaction="/search">Search</button>
                    </div>
                </form>
            </div>
            <% } %>
    </main>

    <!-- Footer -->
    <footer class="footer bg-neutral text-neutral-content items-center p-4">
        <aside class="grid-flow-col items-center">
            <p>Marife Dela Torre | Copyright Â© <%- new Date().getFullYear() %> - All right reserved</p>
        </aside>
        <nav class="grid-flow-col gap-4 md:place-self-center md:justify-self-end">
            <a>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="fill-current">
                    <path
                        d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z">
                    </path>
                </svg>
            </a>
            <a>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="fill-current">
                    <path
                        d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z">
                    </path>
                </svg>
            </a>
            <a>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="fill-current">
                    <path
                        d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z">
                    </path>
                </svg>
            </a>
        </nav>
    </footer>
</body>

</html>